<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_green_dark"
    tools:context="gasolinaoualcool.android.leonardo.com.br.gasolinaoualcool.MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="300dp"
        android:layout_height="81dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="37dp"
        app:srcCompat="@drawable/logo" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/imageView"
        android:layout_below="@+id/imageView"
        android:layout_marginStart="29dp"
        android:layout_marginTop="68dp"
        android:text="Preço Alcool" />

    <TextView
        android:id="@+id/editText_gasolina_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView"
        android:layout_alignBottom="@+id/textView"
        android:layout_alignEnd="@+id/imageView"
        android:layout_marginEnd="34dp"
        android:text="Preço Gasolina" />

    <EditText
        android:id="@+id/edittext_gasolina_id_"
        android:layout_width="100dp"
        android:layout_height="35dp"
        android:layout_alignEnd="@+id/editText_gasolina_id"
        android:layout_alignStart="@+id/editText_gasolina_id"
        android:layout_below="@+id/editText_gasolina_id"
        android:background="@android:color/background_light"
        android:ems="10"
        android:inputType="numberDecimal"
        android:padding="@dimen/padding_caixa_de_texto" />

    <EditText
        android:id="@+id/edittext_alcool_id"
        android:layout_width="100dp"
        android:layout_height="35dp"
        android:layout_alignEnd="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:layout_below="@+id/textView"
        android:background="@android:color/background_light"
        android:ems="10"
        android:inputType="numberDecimal"
        android:padding="@dimen/padding_caixa_de_texto" />

    <Button
        android:id="@+id/btn_verificar_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edittext_gasolina_id_"
        android:layout_marginTop="103dp"
        android:layout_toEndOf="@+id/edittext_alcool_id"
        android:text="Verificar" />

    <TextView
        android:id="@+id/textView_resultado_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="50dp"
        android:layout_toStartOf="@+id/edittext_gasolina_id_"
        android:background="@android:color/holo_green_dark" />

</RelativeLayout>
